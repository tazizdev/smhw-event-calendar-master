<div class="container">
  <div class="row">
    <div class="col-12 text-right py-5 pr-0">
      <%= link_to new_event_path, {remote: true, class: "btn btn-create text-capitalize"} do %>
        <i class="mdi mdi-plus-circle-outline"></i>
        New event
      <% end %>
    </div>
    <%= render "events" %>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="recordModal" tabindex="-1" role="dialog" aria-labelledby="editRecordModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editRecordModal"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body p-0"></div>
    </div>
  </div>
</div>
